<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zohai.healthapp.DoctorPatient"
    android:background="#282f3c">



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="88dp"
        android:background="@drawable/finallogo"
        android:layout_marginTop="99dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.example.zohai.customfonts.MyTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="You can access patient profile by entering the correct email and password"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/byid"
        android:layout_alignParentStart="true" />

    <com.example.zohai.customfonts.MyTextView
    android:id="@+id/byid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rect1"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:padding="16dp"
        android:text="Add by ID"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/or" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="OR"
        android:textColor="#ADCCE2"
        android:textSize="20dp"
        android:layout_above="@+id/byemail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

    <com.example.zohai.customfonts.MyTextView
        android:id="@+id/byemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rect1"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:padding="16dp"
        android:text="Add by Email"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
