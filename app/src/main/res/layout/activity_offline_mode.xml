<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/appbar_offline_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
        android:layout_marginTop="?attr/actionBarSize"
    >
    <TextView
        android:id="@+id/heart"
        android:layout_width="130dp"
        android:layout_height="115dp"
        android:layout_margin="5dp"
        android:background="#fff"
        android:clickable="true"
        android:padding="20dp"
        android:textSize="30sp"
        android:includeFontPadding="false"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:text="- -" />
    <TextView
        android:id="@+id/blood"
        android:layout_width="130dp"
        android:layout_height="115dp"
        android:background="#fff"
        android:clickable="true"
        android:padding="20dp"
        android:text="- -"
        android:layout_alignBottom="@+id/textView4"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:fontFamily="monospace"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="16dp" />
    <TextView
        android:id="@+id/temp"
        android:layout_width="130dp"
        android:layout_height="115dp"
        android:background="#fff"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:padding="20dp"
        android:textSize="30sp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:text="- -"
        android:layout_below="@+id/chkState1"
        android:layout_alignStart="@+id/heart" />


    <ToggleButton
        android:id="@+id/chkState1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/toggle_selector"
        android:checked="true"
        android:padding="6dp"
        android:textOff=""
        android:textOn=""
        android:layout_below="@+id/heart"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="8dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000"
        android:text="Heart Rate"
        android:layout_marginStart="6dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/heart"
        android:layout_alignStart="@+id/heart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#727272"
        android:text="Bpm"
        android:layout_marginStart="-2dp"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/heart"
        android:layout_toEndOf="@+id/heart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000"
        android:text="Blood Pressure"
        android:layout_alignStart="@+id/blood"
        android:id="@+id/textView5"
        android:layout_below="@+id/heart"
        android:layout_marginStart="0dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#727272"
        android:text="mmHg"
        android:layout_marginStart="2dp"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/blood"
        android:layout_toEndOf="@+id/blood" />
    <ImageView
        android:id="@+id/chkState2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_healing_black_24dp"
        android:checked="true"
        android:padding="6dp"
        android:textOff=""
        android:textOn=""
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/blood" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000"
        android:text="Temperature"
        android:id="@+id/textView7"
        android:layout_below="@+id/temp"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="4dp"
        android:layout_marginStart="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#727272"
        android:text="F"
        android:layout_marginStart="4dp"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/temp"
        android:layout_toEndOf="@+id/temp" />

    <ImageView
        android:id="@+id/chkState3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/if_thermometer_"
        android:checked="true"
        android:padding="6dp"
        android:textOff=""
        android:textOn=""
        android:layout_marginStart="2dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_toStartOf="@+id/textView4"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp">

            <Button
                android:id="@+id/bton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn On"
                android:layout_marginRight="40dp"
                android:textColor="@color/white"
                android:background="@drawable/rect3"

                />

            <Button
                android:id="@+id/btoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/rect3"
                android:text="Turn Off"
                 />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>