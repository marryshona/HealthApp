<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zohai.healthapp.DoctorPatient"
    android:background="#282f3c">




    <com.example.zohai.customfonts.MyTextView
        android:id="@+id/doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rect1"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:padding="16dp"
        android:text="Doctor"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/or"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="OR"
        android:textColor="#ADCCE2"
        android:textSize="20dp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/patien"
        android:layout_centerHorizontal="true" />

    <com.example.zohai.customfonts.MyTextView
        android:id="@+id/patien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rect1"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:padding="16dp"
        android:text="Patient"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
